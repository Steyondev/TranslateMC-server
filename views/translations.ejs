<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Translations - Translation Platform</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <% activePage = 'translations' %>
  <%- include('_navbar') %>

  <main class="main-content">
    <% if (messages.error) { %>
      <div class="alert alert-error">
        <span class="alert-icon">⚠️</span>
        <%= messages.error %>
      </div>
    <% } %>

    <% if (messages.success) { %>
      <div class="alert alert-success">
        <span class="alert-icon">✓</span>
        <%= messages.success %>
      </div>
    <% } %>

    <div class="container">
      <div class="page-header">
        <div>
          <h1>Translation Keys</h1>
          <p>Manage all translation strings for your project</p>
        </div>
        <% if (hasPermission('manage_translations')) { %>
          <button class="btn btn-primary" onclick="openCreateModal()">+ Add New Key</button>
        <% } %>
      </div>

      <div class="card">
        <div class="sort-controls">
          <label for="sortBy">Sort by:</label>
          <select id="sortBy" onchange="sortTable(this.value)">
            <option value="key">Key (A-Z)</option>
            <option value="key-desc">Key (Z-A)</option>
            <option value="progress">Progress (Low to High)</option>
            <option value="progress-desc">Progress (High to Low)</option>
            <option value="created">Created By (A-Z)</option>
            <option value="created-desc">Created By (Z-A)</option>
          </select>

          <div class="filter-separator"></div>

          <label for="filterStatus">Filter by Status:</label>
          <select id="filterStatus" onchange="filterTable()">
            <option value="all">All</option>
            <option value="incomplete">Incomplete (< 100%)</option>
            <option value="translated">Translated (100%)</option>
            <option value="approved">Approved</option>
            <option value="pending">Pending Review</option>
          </select>
        </div>
        <div class="table-container">
          <table class="table" id="translationsTable">
            <thead>
              <tr>
                <th>
                  <a href="#" onclick="sortTable('key'); return false;" class="sortable-header">
                    Key <span class="sort-icon">↕</span>
                  </a>
                </th>
                <th>Description</th>
                <th>
                  <a href="#" onclick="sortTable('progress'); return false;" class="sortable-header">
                    Progress <span class="sort-icon">↕</span>
                  </a>
                </th>
                <th>
                  <a href="#" onclick="sortTable('created'); return false;" class="sortable-header">
                    Created By <span class="sort-icon">↕</span>
                  </a>
                </th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody id="translationsTableBody">
              <% if (translationKeys.length === 0) { %>
                <tr>
                  <td colspan="5" class="empty-state">
                    No translation keys yet. Create your first one!
                  </td>
                </tr>
              <% } else { %>
                <% translationKeys.forEach(key => { %>
                  <% const progressPercent = (key.approved_count / languages.length * 100); %>
                  <% const statusClass = progressPercent === 100 ? 'approved' : (progressPercent > 0 ? 'translated' : 'incomplete'); %>
                  <tr data-key="<%= key.key %>" data-progress="<%= key.approved_count %>" data-created="<%= key.created_by_name || '' %>" data-status="<%= statusClass %>">
                    <td><code><%= key.key %></code></td>
                    <td><%= key.description || '-' %></td>
                    <td>
                      <div class="progress-info">
                        <span class="progress-text"><%= key.approved_count %>/<%= languages.length %> languages</span>
                        <div class="progress-bar">
                          <div class="progress-fill" style="width: <% print(progressPercent) %>%"></div>
                        </div>
                      </div>
                    </td>
                    <td><%= key.created_by_name || '-' %></td>
                    <td>
                      <div class="action-buttons">
                        <a href="/translations/<%= key.id %>" class="btn btn-sm">Edit</a>
                        <% if (hasPermission('manage_translations')) { %>
                          <form action="/translations/<%= key.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure?')">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                          </form>
                        <% } %>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>

  <!-- Create Modal -->
  <div id="createModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Add New Translation Key</h2>
        <button class="modal-close" onclick="closeCreateModal()">&times;</button>
      </div>
      <form action="/translations/create" method="POST">
        <div class="modal-body">
          <div class="form-group">
            <label for="key">Key *</label>
            <input type="text" id="key" name="key" required placeholder="e.g., homepage.welcome_message">
            <small>Use dot notation for organization (e.g., page.section.key)</small>
          </div>

          <div class="form-group">
            <label for="description">Description</label>
            <input type="text" id="description" name="description" placeholder="A brief description of this translation">
          </div>

          <div class="form-group">
            <label for="context">Context</label>
            <textarea id="context" name="context" rows="3" placeholder="Additional context for translators"></textarea>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn" onclick="closeCreateModal()">Cancel</button>
          <button type="submit" class="btn btn-primary">Create Key</button>
        </div>
      </form>
    </div>
  </div>

  <script src="/js/main.js"></script>
  <script src="/js/theme.js"></script>
  <script>
    let currentSort = 'key';
    let sortAscending = true;
    let currentFilter = 'all';

    function openCreateModal() {
      document.getElementById('createModal').style.display = 'flex';
    }

    function closeCreateModal() {
      document.getElementById('createModal').style.display = 'none';
    }

    function sortTable(sortType) {
      const tbody = document.getElementById('translationsTableBody');
      const rows = Array.from(tbody.querySelectorAll('tr[data-key]'));

      // Toggle ascending/descending if same sort type is clicked
      if (currentSort === sortType) {
        sortAscending = !sortAscending;
      } else {
        sortAscending = true;
        currentSort = sortType;
      }

      rows.sort((a, b) => {
        let aValue, bValue;

        switch(sortType) {
          case 'key':
            aValue = a.dataset.key.toLowerCase();
            bValue = b.dataset.key.toLowerCase();
            break;
          case 'key-desc':
            aValue = a.dataset.key.toLowerCase();
            bValue = b.dataset.key.toLowerCase();
            return bValue.localeCompare(aValue);
          case 'progress':
            aValue = parseInt(a.dataset.progress);
            bValue = parseInt(b.dataset.progress);
            break;
          case 'progress-desc':
            aValue = parseInt(a.dataset.progress);
            bValue = parseInt(b.dataset.progress);
            return bValue - aValue;
          case 'created':
            aValue = a.dataset.created.toLowerCase();
            bValue = b.dataset.created.toLowerCase();
            break;
          case 'created-desc':
            aValue = a.dataset.created.toLowerCase();
            bValue = b.dataset.created.toLowerCase();
            return bValue.localeCompare(aValue);
          default:
            return 0;
        }

        if (typeof aValue === 'string') {
          return sortAscending ? aValue.localeCompare(bValue) : bValue.localeCompare(aValue);
        } else {
          return sortAscending ? aValue - bValue : bValue - aValue;
        }
      });

      rows.forEach(row => tbody.appendChild(row));
      applyFilter();
    }

    function filterTable() {
      currentFilter = document.getElementById('filterStatus').value;
      applyFilter();
    }

    function applyFilter() {
      const tbody = document.getElementById('translationsTableBody');
      const rows = tbody.querySelectorAll('tr[data-key]');

      let visibleCount = 0;
      rows.forEach(row => {
        const status = row.dataset.status;
        let show = false;

        switch(currentFilter) {
          case 'all':
            show = true;
            break;
          case 'incomplete':
            show = status === 'incomplete';
            break;
          case 'translated':
            show = status === 'translated';
            break;
          case 'approved':
            show = status === 'approved';
            break;
          case 'pending':
            show = status === 'translated' || status === 'incomplete';
            break;
        }

        row.style.display = show ? '' : 'none';
        if (show) visibleCount++;
      });

      // Show empty message if no rows visible
      const emptyRow = tbody.querySelector('tr[colspan]');
      if (emptyRow) {
        emptyRow.style.display = visibleCount === 0 ? '' : 'none';
      }
    }

    window.onclick = function(event) {
      const modal = document.getElementById('createModal');
      if (event.target === modal) {
        closeCreateModal();
      }
    }
  </script>
</body>
</html>
