<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - Translation Platform</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <% activePage = 'admin' %>
  <%- include('_navbar') %>

  <main class="main-content">
    <% if (messages.error) { %>
      <div class="alert alert-error">
        <span class="alert-icon">âš ï¸</span>
        <%= messages.error %>
      </div>
    <% } %>

    <% if (messages.success) { %>
      <div class="alert alert-success">
        <span class="alert-icon">âœ“</span>
        <%= messages.success %>
      </div>
    <% } %>

    <div class="container">
      <div class="page-header">
        <div>
          <h1>âš¡ Admin Dashboard</h1>
          <p>System overview and statistics</p>
        </div>
      </div>

      <!-- User Statistics -->
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-icon">ğŸ‘¥</div>
          <div class="stat-info">
            <div class="stat-value"><%= stats.total_users %></div>
            <div class="stat-label">Total Users</div>
            <div class="stat-sublabel"><%= stats.active_users %> active</div>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">ğŸ‘‘</div>
          <div class="stat-info">
            <div class="stat-value"><%= stats.admin_count %></div>
            <div class="stat-label">Admins</div>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">âš™ï¸</div>
          <div class="stat-info">
            <div class="stat-value"><%= stats.manager_count %></div>
            <div class="stat-label">Managers</div>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">âœï¸</div>
          <div class="stat-info">
            <div class="stat-value"><%= stats.translator_count %></div>
            <div class="stat-label">Translators</div>
          </div>
        </div>
      </div>

      <!-- System Statistics -->
      <div class="stats-grid" style="margin-top: 24px;">
        <div class="stat-card">
          <div class="stat-icon">ğŸ“</div>
          <div class="stat-info">
            <div class="stat-value"><%= stats.total_keys %></div>
            <div class="stat-label">Translation Keys</div>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">ğŸŒ</div>
          <div class="stat-info">
            <div class="stat-value"><%= stats.total_languages %></div>
            <div class="stat-label">Languages</div>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">âœ…</div>
          <div class="stat-info">
            <div class="stat-value"><%= stats.approved_translations %></div>
            <div class="stat-label">Approved</div>
            <div class="stat-sublabel"><%= stats.total_translations %> total</div>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">ğŸ”‘</div>
          <div class="stat-info">
            <div class="stat-value"><%= stats.total_api_keys %></div>
            <div class="stat-label">API Keys</div>
          </div>
        </div>
      </div>

      <div class="dashboard-grid" style="margin-top: 32px;">
        <!-- Recent Users -->
        <div class="dashboard-card">
          <div class="card-header">
            <h2>Recent Users</h2>
            <a href="/users" class="btn btn-sm">View All</a>
          </div>
          <div class="card-body">
            <div class="list">
              <% users.forEach(user => { %>
                <div class="list-item">
                  <div class="list-item-content">
                    <div class="list-item-title">
                      <%= user.username %>
                      <% if (!user.is_active) { %>
                        <span class="badge" style="background: var(--danger); color: white;">Inactive</span>
                      <% } %>
                    </div>
                    <div class="list-item-subtitle"><%= user.email %></div>
                  </div>
                  <div class="list-item-meta">
                    <span class="role-badge role-<%= user.role %>"><%= user.role %></span>
                  </div>
                </div>
              <% }); %>
            </div>
          </div>
        </div>

        <!-- Recent Activity -->
        <div class="dashboard-card">
          <div class="card-header">
            <h2>Recent Activity</h2>
          </div>
          <div class="card-body">
            <div class="activity-list">
              <% recentActivity.forEach(activity => { %>
                <div class="activity-item">
                  <div class="activity-icon">
                    <% if (activity.action === 'login') { %>ğŸ”“
                    <% } else if (activity.action === 'translate') { %>âœï¸
                    <% } else if (activity.action === 'approve') { %>âœ…
                    <% } else if (activity.action === 'create_user') { %>ğŸ‘¤â•
                    <% } else if (activity.action === 'delete_user') { %>ğŸ‘¤ğŸ—‘ï¸
                    <% } else if (activity.action === 'update_role') { %>ğŸ‘¥âš™ï¸
                    <% } else if (activity.action === 'toggle_user_active') { %>ğŸ‘¥ğŸ”„
                    <% } else if (activity.action === 'create_key') { %>â•
                    <% } else if (activity.action === 'delete_key') { %>ğŸ—‘ï¸
                    <% } else { %>ğŸ“Œ<% } %>
                  </div>
                  <div class="activity-content">
                    <div class="activity-user"><%= activity.username || 'System' %></div>
                    <div class="activity-text"><%= activity.details || activity.action %></div>
                    <div class="activity-time"><%= new Date(activity.created_at).toLocaleString() %></div>
                  </div>
                </div>
              <% }); %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script src="/js/main.js"></script>
  <script src="/js/theme.js"></script>
</body>
</html>
